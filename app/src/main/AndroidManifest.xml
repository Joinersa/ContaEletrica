<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.joinersa.contaeletrica">

    <application
        android:allowBackup="true"
        android:configChanges="screenSize|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreenActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.InicialActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activity.ItemActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_item" />
        <activity
            android:name=".activity.ListaAparelhosActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_lista_aparelhos" />
        <activity
            android:name=".activity.ConcessionariaActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_concessionaria" />
        <activity
            android:name=".activity.ResultadoActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_resultados" />
        <activity
            android:name=".activity.SobreActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".activity.DicasActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_dicas" />
        <activity
            android:name=".activity.HistoricoActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_historico"/>
    </application>

</manifest>
